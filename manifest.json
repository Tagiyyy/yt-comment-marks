{
  "manifest_version": 3,
  "name": "YouTube Comment Marks",
  "description": "Show comment timestamps as markers on the YouTube seek bar.",
  "version": "0.1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/logger.js", "src/content.js"],
      "css": ["src/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "YouTube Comment Marks"
  }
}
